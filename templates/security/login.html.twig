{% extends 'base.html.twig' %}
{% block css %}<link rel="stylesheet" href="{{ asset('styleLogin.css') }}">{% endblock %}

{% block body %}
<article id="login_page">
<section id="section_login">
<form method="post" class="m-5 p-5 light" id="login_form">
<h1 class="h3 mb-3 font-weight-normal text-light bold">Veuillez vous connecter</h1>
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3 text-light">
            Vous êtes déjà connéctés en tant que {{ app.user.userIdentifier }}, <a id="message_deconnexion" class="text-danger" href="{{ path('app_logout') }}">déconnexion</a>
        </div>
    {% endif %}

    <div class="m-0">
                    <label for="inputEmail" class="form-label"></label>
                    <input type="email" value="{{ last_username }}" name="email" class="form-control" id="inputEmail" autocomplete="email" placeholder="Email" required autofocus>
    </div>
    <div class="my-3">
                    <label for="exampleInputEmail1" class="form-label"></label>
                    <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" placeholder="Mot de passe" required>
    </div>
    <button type="submit" class="btn btn-danger btn-lg" id="button_contact">Envoyer</button>

    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
</form>
</section>
</article>
{% endblock %}


