{% extends 'base.html.twig' %}

{% block title %}Program{% endblock %}

{% block body %}
    <h1>Program</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ program.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ program.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ program.description }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ program.price }}</td>
            </tr>
            <tr>
                <th>Created_At</th>
                <td>{{ program.createdAt ? program.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Updated_at</th>
                <td>{{ program.updatedAt ? program.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_admin_program_index') }}">back to list</a>

    <a href="{{ path('app_admin_program_edit', {'id': program.id}) }}">edit</a>

    {{ include('admin_program/_delete_form.html.twig') }}
{% endblock %}
